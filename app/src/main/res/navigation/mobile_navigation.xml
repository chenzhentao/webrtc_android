    <fragment
        android:id="@+id/navigation_room"
        android:name="com.dds.core.ui.local.LocalFragment"
        android:label="@string/title_room"
        tools:layout="@layout/fragment_room" />

    <fragment
        android:id="@+id/navigation_setting"
